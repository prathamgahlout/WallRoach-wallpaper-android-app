<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_full_screen_premium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:context="com.whoops.wallroachwallpapers.FullScreenPremium"
    android:theme="@style/AppTheme.NoActionBar.Fullscreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/fullscreenimage"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/placeholder"
        android:visibility="visible"/>













    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:id="@+id/progressbar" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_setas"
        android:layout_marginEnd="@dimen/fab_margin"
        app:fabSize="auto"
        android:layout_marginBottom="70dp"
        android:layout_gravity="end|bottom"
        app:srcCompat="@android:drawable/ic_input_add" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/setAsHome"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="140dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_rect"
        android:text="Set as Home Screen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/setAslock"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="190dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_rect"
        android:text="Set as Lock Screen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:id="@+id/download"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/rounded_rect"
        android:text="Download"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:id="@+id/fab_home"
        android:src="@drawable/ic_fab_home"
        app:fabSize="normal"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_lock"
        android:src="@drawable/ic_fab_lock"
        app:fabSize="normal"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="170dp"

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_down"
        android:src="@drawable/ic_download"
        app:fabSize="normal"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="220dp"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-6967138802491752/8262034688">
    </com.google.android.gms.ads.AdView>





</FrameLayout>
