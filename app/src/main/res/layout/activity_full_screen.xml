<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_full_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.whoops.wallroachwallpapers.FullScreenActivity"
    android:theme="@style/AppTheme.NoActionBar.Fullscreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/fullscreenimage"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/placeholder"
        android:visibility="visible"/>













    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:id="@+id/progressbar" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_setas"
        android:layout_marginEnd="@dimen/fab_margin"
        app:fabSize="auto"
        android:layout_marginBottom="70dp"
        android:layout_gravity="end|bottom"
        android:tint="#000000"
        app:srcCompat="@android:drawable/ic_input_add" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/setAsHome"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="155dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_rect"
        android:text="Set as Home Screen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/setAslock"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="215dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_rect"
        android:text="Set as Lock Screen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:id="@+id/download"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/rounded_rect"
        android:text="Download"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/share_this_wall"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="335dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_rect"
        android:text="Share this Wallpaper with friends"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:id="@+id/fab_home"
        android:src="@drawable/ic_fab_home"
        app:fabSize="normal"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:tint="#000000"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_lock"
        android:src="@drawable/ic_fab_lock"
        app:fabSize="normal"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/fab_margin"
        android:tint="#000000"
        android:layout_marginBottom="200dp"

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_down"
        android:src="@drawable/ic_download"
        app:fabSize="normal"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="260dp"
        android:visibility="invisible"
        android:tint="#000000"
        android:layout_gravity="bottom|end"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_share_wall"
        android:src="@drawable/ic_menu_share"
        app:fabSize="normal"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="320dp"

        />
