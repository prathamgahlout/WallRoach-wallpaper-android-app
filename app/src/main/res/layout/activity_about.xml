<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    app:layout_scrollFlags="scroll"
    android:background="@android:color/white"
    style="@style/AppTheme.NoActionBar"
    tools:context="com.whoops.wallroachwallpapers.AboutActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mipmap_72"
            android:layout_centerHorizontal="true"
            android:id="@+id/launcher_icon"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WallRoach"
            android:layout_gravity="center"
            android:paddingTop="4dp"
            android:textSize="20sp"
            android:layout_below="@id/launcher_icon"
            android:id="@+id/brand_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="whOOps, inc."
            android:layout_centerHorizontal="true"
            android:layout_below="@id/brand_text"
            android:layout_gravity="center"
            android:paddingTop="4dp"
            android:textSize="12sp"

            android:paddingBottom="4dp"
            android:id="@+id/company_text"
            android:textColor="@color/colorPrimaryDark"
            />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#1da1f2"
                android:src="@drawable/tweet_48"
                android:id="@+id/shareappontwitter"
                android:layout_marginStart="100dp"
                android:layout_below="@id/company_text"
                android:padding="40dp"
                app:fabSize="normal"
                app:elevation="0dp"

                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#3b5998"
                android:src="@drawable/fb_48"
                android:id="@+id/shareonfb"
                android:layout_marginStart="20dp"
                android:layout_below="@id/company_text"
                android:padding="40dp"
                app:fabSize="normal"
                app:elevation="0dp"

                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#dd4b39"
                android:src="@drawable/gplus48"
                android:id="@+id/gpluscommunity"
                android:layout_marginStart="180dp"
                android:layout_below="@id/company_text"
                android:padding="40dp"
                app:fabSize="normal"
                app:elevation="0dp"

                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#f57d00"
                android:src="@drawable/blog_48"
                android:id="@+id/wallroachblog"
                android:layout_marginStart="260dp"
                android:layout_below="@id/company_text"
                android:padding="40dp"
                app:fabSize="normal"
                app:elevation="0dp"

                />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shareappontwitter"
        android:id="@+id/version_card"
        android:layout_margin="5dp"
        android:paddingTop="4dp"
        app:cardElevation="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version"
            android:paddingLeft="4dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"
            android:text="Version 1.8.0 FREE"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_card"
        android:layout_margin="5dp"
        android:id="@+id/copyright_card"
        app:cardElevation="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            app:tint="@color/colorPrimaryDark"
            android:src="@drawable/info_48"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright"
            android:paddingLeft="50dp"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright_disclaimer"
            android:paddingLeft="50dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyright_card"
        android:id="@+id/rate_card"
        android:layout_margin="5dp"
        app:cardElevation="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorPrimaryDark"
            android:src="@drawable/star_48"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you find it useful..."
            android:paddingLeft="50dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_rate"
            android:paddingStart="50dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"/>
    </androidx.cardview.widget.CardView>

        </RelativeLayout>




</RelativeLayout>
